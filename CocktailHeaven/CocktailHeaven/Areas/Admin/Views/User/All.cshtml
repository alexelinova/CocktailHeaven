@using CocktailHeaven.Core.Models.ApplicationUser;

@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Review and Delete Users";
}

<div class="container">
    <h1 class="text-center">Review and Delete Users</h1>

    @if (!Model.Any())
    {
        <div class="text-center mt-3">
            <h4>No Users Found!</h4>
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="col">
                <ul class="list-group">
                    @foreach (var user in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <div><span class="fw-bold">Username:</span> @user.Username</div>
                                <div><span class="fw-bold">E-mail:</span> @user.Email</div>
                            </div>
                            <div>
                                <form asp-area="Admin" asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to delete: @(user.Username)?')">Delete</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
</div>
