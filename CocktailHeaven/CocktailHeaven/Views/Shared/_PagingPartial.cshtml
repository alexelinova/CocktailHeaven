@using CocktailHeaven.Core.Models;

@model PagingModel

<nav>
	<ul class="pagination justify-content-center">
		<li class="page-item @(!Model.HasPreviousPage ? "disabled" : string.Empty)">
			<a class="page-link" asp-action="All" asp-route-id="@Model.PreviousPage">Previous</a>
		</li>
		@for (int i = this.Model.PageNumber - 2; i < Model.PageNumber; i++)
		{
			if (i > 0)
			{
				<li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
			}
		}
		<li class="page-item active" aria-current="page">
			<a class="page-link" href="#">@Model.PageNumber</a>
		</li>
		@for (int i = this.Model.PageNumber + 1; i <= Model.PageNumber + 2; i++)
		{
			if (i <= Model.PagesCount)
			{
				<li class="page-item"><a class="page-link" asp-action="All" asp-route-id="@i">@i</a></li>
			}
		}
		<li class="page-item @(!Model.HasNexPage ? "disabled" : string.Empty)">
			<a class="page-link" asp-action="All" asp-route-id="@Model.NextPage">Next</a>
		</li>
	</ul>
</nav>
