@using CocktailHeaven.Core.Models.Rating;

@model RateCocktailModel

<form asp-controller="Rating" asp-action="Rate" method="post">
	<input type="hidden" asp-for="@Model.CocktailId" />
	<div class="mb-3">
		<label asp-for="@Model.Value" class="form-label">Edit/Add Rating</label>
		<select class="form-select" asp-for="@Model.Value">
			<option value="1">1 star</option>
			<option value="2">2 stars</option>
			<option value="3">3 stars</option>
			<option value="4">4 stars</option>
			<option value="5">5 stars</option>
		</select>
		<span asp-validation-for="@Model.Value"></span>
	</div>
	<div class="mb-3">
		<label asp-for="@Model.Comment">Comment</label>
		<textarea asp-for="@Model.Comment" class="form-control" rows="4"></textarea>
		<span asp-validation-for="@Model.Comment"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
